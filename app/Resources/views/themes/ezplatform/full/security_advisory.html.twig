{% extends '@ezdesign/pagelayout.html.twig' %}

{% block content %}
    <section class="blog-post">
        <div class="blog-post-header">
            <div class="container">
                <h1>
                    {{ ez_content_name(content) }}
                </h1>
            </div>
        </div>

        <div class="container">

            <div class="security-advisory-details">
                Publication date: <b>{{ ez_render_field(content,'publication_date')}}</b><br />
                Severity: <b>{{ ez_render_field(content,'severity')}}</b><br />
                Affected versions: <b>{{ ez_render_field(content,'affected_versions')}}</b><br />
                Resolving versions: <b>{{ ez_render_field(content,'resolving_versions')}}</b>
            </div>

            <div class="blog-post-body">
                {{ ez_render_field(content, 'body') }}
            </div>

            <hr />
            <p>Have you found a security bug in eZ Publish or eZ Platform? See how to report it responsibly here: <a href="https://doc.ezplatform.com/en/latest/guide/reporting_issues/" target="_self">https://doc.ezplatform.com/en/latest/guide/reporting_issues/</a></p>

            <p><a href="./">All security advisories <i class="fa fa-angle-double-right"></i></a></p>

        </div>
    </section>
{% endblock %}
